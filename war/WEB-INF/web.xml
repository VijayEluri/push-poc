<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE web-app
    PUBLIC "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
    "http://java.sun.com/dtd/web-app_2_3.dtd">

<web-app>
  
  <!-- Servlets -->
  <servlet>
  	<servlet-name>main-service</servlet-name>
  	<servlet-class>com.sfeir.websockets.jcd.server.MainServiceImpl</servlet-class>
  </servlet>
  
  <servlet-mapping>
  	<servlet-name>main-service</servlet-name>
  	<url-pattern>/jcd/main-service</url-pattern>
  </servlet-mapping>
  
  <!-- Default page to serve -->
  <welcome-file-list>
    <welcome-file>JCD.html</welcome-file>
  </welcome-file-list>

</web-app>
